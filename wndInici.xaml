<Window x:Class="JocNums.wndInici"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JocNums"
        mc:Ignorable="d" FontSize="30"
        Title="wndInici" Height="450" Width="800">
    <DockPanel Margin="10" LastChildFill="True" Background="AliceBlue">
        <TextBlock Text="Escriu el num de files que vols en el joc (2 - 20)" DockPanel.Dock="Top" Margin="10"/>
        <TextBox x:Name="numFiles" DockPanel.Dock="top" Margin="10"/>
        <TextBlock Text="Escriu el num de columnes que vols en el joc (2 - 20)" DockPanel.Dock="Top" Margin="10"/>
        <TextBox x:Name="numColumnes" DockPanel.Dock="top" Margin="10"/>
        <Button Content="Envia!" Name="btnEnvia" Click="btnEnvia_Click" DockPanel.Dock="Bottom" Margin="40"/>
    </DockPanel>
</Window>
